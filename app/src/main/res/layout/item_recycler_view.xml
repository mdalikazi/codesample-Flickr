<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="@drawable/selected_item_border">

    <ImageView
        android:id="@+id/recycler_item_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_content_description_default"
        tools:src="@drawable/ic_placeholder_photo"
        tools:alpha="0.5"/>

    <ProgressBar
        android:id="@+id/recycler_item_progress_bar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
